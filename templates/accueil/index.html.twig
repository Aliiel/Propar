{% extends 'base.html.twig' %}

{% block title %}Liste des opérations{% endblock %}

{% block body %}

{% include "header/_header.html.twig" %}

<div class="container">
    <h1>Liste des opérations en cours</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>ID Operation</th>
                <th>Prix</th>
                <!-- Ajoutez d'autres en-têtes de colonnes si nécessaire -->
            </tr>
        </thead>
        <tbody>
            {% for operation in operations %}
                <tr>
                    <td>{{ operation.id }}</td>
                    <td>{{ operation.type }}</td>
                    <!-- Ajoutez d'autres données d'opération si nécessaire -->
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
