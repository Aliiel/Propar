{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
{% endblock %}

{% block title %}Liste des opérations{% endblock %}


{% block body %}

{% include "header/_header.html.twig" %}
<h1>Liste des opérations</h1>
<div class="container">
<div class="row">
<h2>Opérations en cours : </h2>
    {% for operation in operations %}
        <div class="col-md-4 mb-4 bg-primary">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Opération #{{ operation.id }}</h5>
                    <p class="card-text">{{ operation.type }}</p>
                    <button>Consulter</button>
                    <!-- Ajoutez d'autres données d'opération si nécessaire -->
                </div>
            </div>
        </div>
    {% endfor %}

<h2>Opérations terminées : </h2>
    {% for operationEnd in operationEnds %}
        <div class="col-md-4 mb-4 bg-primary">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Opération #{{ operation.id }}</h5>
                    <p class="card-text">{{ operation.type }}</p>
                    <!-- Ajoutez d'autres données d'opération si nécessaire -->
                </div>
            </div>
        </div>
    {% endfor %}
</div>
</div>
{% endblock %}
