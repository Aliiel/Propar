{% block title %}Operation{% endblock %}

{% block body %}

{% include "header/_header.html.twig" %}


    <h1>Operation n° {{ operation.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Etat de l'opération :</th>
                <td>{{ etatOperation }}</td>
            </tr>
            <tr>
                <th>Date de réalisation : </th>
