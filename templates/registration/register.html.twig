{% extends 'base.html.twig' %}

{% block title %}Création d'un nouvel utilisateur{% endblock %}

{% block body %}

  {% include "header/_header.html.twig" %}

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/ajoutUtilisateurForm.css') }}">
  {% endblock %}
{% if app.user.getRoles()[0] == 'EXPERT' %}
  <div class="main">
    <div class="element1">
      <h1>Création d'un nouvel utilisateur</h1>
        {# <img src="{{asset('image\nouvelutilisateur.jpg')}}"> #}
    </div>
<section>
      {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}
      {% endfor %}

<div class="formulaire">
    <div class="corpsForm">
      {{ form_start(registrationForm) }}
      {{ form_errors(registrationForm) }}

      <div class="div">{{ form_row(registrationForm.nom, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(registrationForm.prenom, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(registrationForm.email, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(registrationForm.plainPassword, {
            'label': 'Mot de passe',
            'attr': {'class': 'select'}
      }) }}</div>
      <div class="div">{{ form_row(registrationForm.roles, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(registrationForm.Accepter, {'attr': {'class': 'select'}}) }}</div>

     <div class="btn_submit">
        <button type="submit" class="btn">Créer</button>
     </div>
        {{ form_end(registrationForm) }}
     </div>
     </div>
</section>

  </div>
{% else %}
<h1>Acces Non Autorisé</h1>
{% endif %}

{% endblock %}
