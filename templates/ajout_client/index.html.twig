{% extends 'base.html.twig' %}

{% block title %}Création d'un nouveau client{% endblock %}

{% block body %}

  {% include "header/_header.html.twig" %}

  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/ajoutUtilisateurForm.css') }}">
  {% endblock %}

  <div class="main">
    <div class="element1">
      <h1>Création d'un nouveau client</h1>
        {# <img src="{{asset('image\nouvelutilisateur.jpg')}}"> #}
    </div>

    <section>

    <div class="formulaire">
    <div class="corpsForm">
      {{ form_start(form) }}
      {{ form_errors(form) }}

      <div class="div">{{ form_row(form.Nom, {'attr': {'class': 'select'}}) }}</div>
      <div class="div"> {{ form_row(form.prenom, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(form.numero_voie, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(form.adresse, {'attr': {'class': 'select'}}) }}</div>
      <div class="div"> {{ form_row(form.code_postal, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(form.ville, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(form.pays, {'attr': {'class': 'select'}}) }}</div>
      <div class="div">{{ form_row(form.email, {'attr': {'class': 'select'}}) }}</div>

     <div class="btn_submit">
        <button type="submit" class="btn">Créer</button>
     </div>
        {{ form_end(form) }}
     </div>
     </div>
</section>
 
{% endblock %}
