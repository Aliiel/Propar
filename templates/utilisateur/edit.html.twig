{% extends 'base.html.twig' %}

{% block title %}Utilisateur  {% endblock %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('css/crud.css') }}" />

{% endblock %}

{% block body %}

{% include "header/_header.html.twig" %} 

    <h1>Utilisateur {{utilisateur.nom}} {{utilisateur.prenom}}</h1>
    <section>
   <img src="{{asset('image/avatar.png')}}" alt="avatar" width="50%" border-radius="10px">
<div class="main_form">   
    {# {{ include('utilisateur/_form.html.twig', {'button_label': 'Mettre à jour'}) }} #}
    {{ form_start(formEdit) }}
    {{ form_row(formEdit.email) }}
    {{ form_row(formEdit.plainPassword) }}
    {{ form_row(formEdit.nom) }}
    {{ form_row(formEdit.prenom) }}

    {% if app.user.getRoles()[0] == 'EXPERT' %}
    {{ form_row(formEdit.roles) }}
    {% else %}
    <p>.</p>
    {% endif %}

     <button class="btn">{{ button_label|default('Mettre à jour') }}</button>
    {{ form_end(formEdit) }}

    {% if app.user.getRoles()[0] == 'EXPERT' %}
    {{ include('utilisateur/_delete_form.html.twig') }}
    {% endif %}
    
{% if app.user.getRoles()[0] == 'EXPERT' %}
    <a href="{{ path('app_liste_utilisateur') }}"><button class="btn liste">Retour à la liste</button></a>
    {% else %}
    <a href="{{ path('app_interface_utilisateur') }}"><button class="btn liste">Retour à l'interface</button></a>
    {% endif %}
</div>
  </section>
{% endblock %}
