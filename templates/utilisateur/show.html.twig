{% extends 'base.html.twig' %}
{% block title %}Utilisateur
{% endblock %}

{% block stylesheets %}

	<link rel="stylesheet" href="{{ asset('css/show.css') }}"/>

{% endblock %}

{% block body %}

	{% include "header/_header.html.twig" %}

	<h1>Details de l'utilisateur :
		{{utilisateur.nom}} {{utilisateur.prenom}}</h1>

	<section>
		<div class="main_consult">
			<table class="table">
				<tbody>
					{# <tr>
					        <th>Id</th>
					        <td>{{ utilisateur.id }}</td>
					      </tr> #}
					<tr>
						<th>Email:
						</th>
						<td>{{ utilisateur.email }}</td>
					</tr>
					<tr>
						<th>Role:</th>
						<td>
							{% for role in utilisateur.roles %}

								{{ role }}

							{% endfor %}
						</td>
					</tr>
					<tr>
						<th>Nom:
						</th>
						<td>{{ utilisateur.nom }}</td>
					</tr>
					<tr>
						<th>Prenom:
						</th>
						<td>{{ utilisateur.prenom }}</td>
					</tr>
				</tbody>

			</table>

			<div class="btn_groupe">

				<a href="{{ path('app_utilisateur_edit', { id: utilisateur.id }) }}">
					<button class="btn modif">Modifier</button>
				</a>


				{% if app.user.getRoles()[0] == 'EXPERT' %}
					{{ include("utilisateur/_delete_form.html.twig") }}
				{% endif %}


			</div>
			{% if app.user.getRoles()[0] == 'EXPERT' %}
				<a href="{{ path('app_liste_utilisateur') }}">
					<button class="btn liste">Retour à la liste</button>
				</a>
			{% endif %}
			<a href="{{ path('app_interface_utilisateur') }}">
				<button class="btn liste">Retour à l'interface</button>
			</a>

		</div>
		<img src="{{asset('image/menage.jpg')}}" alt="homme cleaning" width="50%">
	</section>

{% endblock %}
