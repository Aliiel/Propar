{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/loginForm.css') }}"> {% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté avec l'adresse e-mail : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <div class="main">
        <div class="element1">
            <h1>Connexion</h1>
        </div>
    <section>
        <h2>Veuillez entrer vos identifiants</h2>
        <div class="formulaire">
            <div class="corpsForm">    
                <div class="div"><label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus></div>
                <div class="div"><label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required></div>

                <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
    </div>
    </div>
</form>
{% endblock %}
